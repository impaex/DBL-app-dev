<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cellDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019">

    </TextView>

    <TextView
        android:id="@+id/eventcell1"
        android:layout_width="53dp"
        android:layout_height="18dp"
        android:layout_marginTop="4dp"
        android:background="@color/babyblue"
        android:gravity="center"
        android:text="Event of day 1"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cellDayText" />

    <TextView
        android:id="@+id/eventcell2"
        android:layout_width="53dp"
        android:layout_height="18dp"
        android:layout_marginTop="2dp"
        android:background="@color/babyblue"
        android:gravity="center"
        android:text="Event of day 2"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventcell1" />

    <TextView
        android:id="@+id/eventcell3"
        android:layout_width="53dp"
        android:layout_height="18dp"
        android:layout_marginTop="2dp"
        android:background="@color/babyblue"
        android:gravity="center"
        android:text="Event of day 3"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventcell2" />

</androidx.constraintlayout.widget.ConstraintLayout>